@using ProdCat.Models
@model Categories

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1><a href="/products">Products </a> | <a href="/categories"> Categories</a></h1>
    <div>
        <h1>New Categories</h1>
        <form asp-action="CreateCategories" asp-controller="Home" method="POST">
            <tr>
                <td>
                    <span asp-validation-for="Name"></span>
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" value=""/>
                </td>
            <tr>
                <td><input type="submit" value="Submit"/></td>
            </tr>
        </form>
    </div>
    <div> 
        <h1>Existing Categories</h1>
        @foreach(var categories in @ViewBag.Categories)
        {
            <ul>
                <li><a href="/categories/@categories.CategoryId">@categories.Name</a></li>
            </ul>
        }
    </div> 
</body>
</html>