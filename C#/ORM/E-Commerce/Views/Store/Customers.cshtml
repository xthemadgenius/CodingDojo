@using E_Commerce.Models
@model CustomerWrapper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers</title>
    <link rel="stylesheet" href="~/css/navbar.css">
    <link rel="stylesheet" href="~/css/tables.css">
</head>
<body>
    <partial name="NavPartial"/>
    <h1>Customers</h1>
    <div>
        <form asp-action="Shopper" asp-controller="Store" method="POST">
            <div>
                <label asp-for="NewCustomer.Name"></label>
                <input type="text" asp-for="NewCustomer.Name">
            </div>
            <input type="submit" value="Add">
        </form>
    </div>
    <div>
        <h3>Search</h3>
        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">
    </div>
    <table id="myTable">
        <tr class="header">
            <th>Customer Name</th>
            <th>Created Date</th>
            <th>Action</th>
        </tr>
        @{foreach(Customer shopper in Model.AllCustomers)
            {
                <tr>
                    <td>@shopper.Name</td>
                    <td>@shopper.CreatedAt</td>
                    <td>DELETE</td>
                </tr>
            }
        }
    </table>
</body>
<script src="~/js/search.js"></script>
</html>