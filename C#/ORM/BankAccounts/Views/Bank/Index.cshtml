@using BankAccounts.Models
@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/styles.css">
    <title>New User</title>
</head>
<body>
    <div class="login-box">
        <div>
            <a href="/login">Login?</a>
            <h2>Sign Up</h2>
        </div>
        <form asp-action="Register" asp-controller="Bank" method="POST">
            <div class="user-box">
                <input type="text" asp-for="FirstName" name="FirstName" id="FirstName">
                <label asp-for="FirstName"></label>
            </div>
            <div class="user-box">
                <input type="text" asp-for="LastName" name="LastName" id="LastName">
                <label asp-for="LastName"></label>
            </div>
            <div class="user-box">
                <input asp-for="Email" type="email" name="Email" id="Email">
                <label asp-for="Email"></label>
            </div>
            <div class="user-box">
                <input type="password" asp-for="Password" name="Password" id="Password">
                <label asp-for="Password"></label>
            </div>
            <div class="user-box">
                <input type="password" asp-for="Confirm" name="Confirm" id="Confirm">
                <label asp-for="Confirm"></label>
            </div>
            <button type="submit">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Submit
            </button>
        </form>
    </div>
    <div>
        <span class="error" asp-validation-for="Email"></span>
        <span class="error" asp-validation-for="Password"></span>
        <span class="error" asp-validation-for="Confirm"></span>
    </div>
</body>
</html>