@using CRUDelicious.Models
@model Dish
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Food</title>
</head>
<body>
    <a href="/">Home</a>
    <h1>Add a New Dish</h1>
    <div>
        <form asp-action="Create" asp-controller="Crud" method="POST">
            <div>
                <label asp-for="Chef"></label>
                <input asp-for="Chef" name="Chef" type="text">
            </div>
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" name="Name" type="text">
            </div>
            <div>
                <label asp-for="Calories"></label>
                <input type="number" asp-for="Calories" name="Calories">
            </div>
            <div>
                <label asp-for="Tastiness"></label>
                <select asp-for="Tastiness" name="Tastiness" id="">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <div>
                <label asp-for="Description"></label>
                <textarea asp-for="Description" name="Description" id="Description" cols="30" rows="10"></textarea>
            </div>
            <input type="submit">
        </form>
        <div>
            <span class="text-danger" asp-validation-for="Name"></span>
            <span class="text-danger" asp-validation-for="Chef"></span>
            <span class="text-danger" asp-validation-for="Calories"></span>
            <span class="text-danger" asp-validation-for="Tastiness"></span>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>
</body>
</html>