@using WeddingPlanner.Models
@model Wedding
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/create.css">
    <title>Create Wedding</title>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places"></script>
</head>
<body>
    <div>
        <h1>Plan Your Wedding</h1>
        <a href="/dashboard">Dashboard</a>
        <a href="/logout">Logout</a>
    </div>
    <div>
        <form asp-action="CreateWedding" asp-controller="Home" method="POST">
            <div>
                <label asp-for="WedderOne"></label>
                <input type="text" asp-for="WedderOne" name="WedderOne" id="WedderOne">
            </div>
            <div>
                <label asp-for="WedderTwo"></label>
                <input type="text" asp-for="WedderTwo" name="WedderTwo" id="WedderTwo">
            </div>
            <div>
                <label asp-for="Date"></label>
                <input type="date" asp-for="Date" name="Date" id="Date">
            </div>
            <div>
                <label asp-for="Address"></label>
                <input type="text" asp-for="Address" name="Address" id="Address">
            </div>
            <input type="submit" value="Create">
        </form>
    </div>
    <div class="error">
        <span asp-validation-for="WedderOne"></span>
        <span asp-validation-for="WedderTwo"></span>
        <span asp-validation-for="Date"></span>
        <span asp-validation-for="Address"></span>
    </div>
    <script src="~/js/mapAuto.js"></script>
</body>
</html>