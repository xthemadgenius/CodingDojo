@using WeddingPlanner.Models
@model Wedding
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div>
        <h1>Edit Wedding</h1>
        <a href="/dashboard">Dashboard</a>
        <a href="/logout">Logout</a>
    </div>
    <div>
        <form asp-action="UpdateWedding" asp-controller="Home" method="POST">
            <div>
                <label asp-for="WedderOne"></label>
                <input type="text" asp-for="WedderOne" name="WedderOne" id="WedderOne">
            </div>
            <div>
                <label asp-for="WedderTwo"></label>
                <input type="text" asp-for="WedderTwo" name="WedderTwo" id="WedderTwo">
            </div>
            <div>
                <label asp-for="Date"></label>
                <input type="date" asp-for="Date" name="Date" id="Date">
            </div>
            <div>
                <label asp-for="Address"></label>
                <input type="text" asp-for="Address" name="Address" id="Address">
            </div>
            <input type="submit" value="Update">
        </form>
        <div>
            <span asp-validation-for="WedderOne"></span>
            <span asp-validation-for="WedderTwo"></span>
            <span asp-validation-for="Date"></span>
            <span asp-validation-for="Address"></span>
        </div>
    </div>
</body>
</html>