@{
    ViewData["Title"] = "Level 1";
}

<div class="card">
    <div class="card-header bg-dark text-light">Level 1</div>
    <div class="card-body">
        <p>Using the SportsORM, complete all the following queries and show their results on Level1.cshtml.</p>
        <ol>
            <li><h3>...all womens' leagues</h3></li>
                <ul>
                @foreach (League w in ViewBag.One)
                {
                    <li>@w.Name</li>
                }
                </ul>
            <li><h3>...all leagues where sport is any type of hockey</h3></li>
                <ul>
                    @foreach (League h in ViewBag.Two)
                    {
                    <li>@h.Name</li>
                    }
                </ul>
            <li><h3>...all leagues where sport is something OTHER THAN football</h3></li>
                <ul>
                    @foreach (League f in ViewBag.Three)
                    {
                    <li>@f.Name</li>
                    }
                </ul>
            <li><h3>...all leagues that call themselves "conferences"</h3></li>
                <ul>
                    @foreach (League c in ViewBag.Four)
                    {
                    <li>@c.Name</li>
                    }
                </ul>
            <li><h3>...all leagues in the Atlantic region</h3></li>
                <ul>
                    @foreach (League a in ViewBag.Five)
                    {
                    <li>@a.Name</li>
                    }
                </ul>
            <li><h3>...all teams based in Dallas</h3></li>
                <table class="table table-striped">
                    <tr>
                        <th>Team Location</th>
                        <th>Team Name</th>
                    </tr>
                    @foreach(var d in ViewBag.Six)
                    {
                        <tr>
                            <td>@d.Location</td>
                            <td>@d.TeamName</td>
                        </tr>
                    }
                </table>
            <li><h3>...all teams named the Raptors</h3></li>
                <table class="table table-striped">
                    <tr>
                        <th>Team Location</th>
                        <th>Team Name</th>
                    </tr>
                    @foreach(var t in ViewBag.Seven)
                    {
                        <tr>
                            <td>@t.Location</td>
                            <td>@t.TeamName</td>
                        </tr>
                    }
                </table>
            <li><h3>...all teams whose location includes "City"</h3></li>
                <table class="table table-striped">
                    <tr>
                        <th>Team Location</th>
                        <th>Team Name</th>
                    </tr>
                    @foreach(var c in ViewBag.Eight)
                    {
                        <tr>
                            <td>@c.Location</td>
                            <td>@c.TeamName</td>
                        </tr>
                    }
                </table>
            <li><h3>...all teams whose names begin with "T"</h3></li>
                <table class="table table-striped">
                    <tr>
                        <th>Team Location</th>
                        <th>Team Name</th>
                    </tr>
                    @foreach(var t in ViewBag.Nine)
                    {
                        <tr>
                            <td>@t.Location</td>
                            <td>@t.TeamName</td>
                        </tr>
                    }
                </table>
            <li><h3>...all teams, ordered alphabetically by location</h3></li>
                <table class="table table-striped">
                    <tr>
                        <th>Team Location</th>
                        <th>Team Name</th>
                    </tr>
                    @foreach(var l in ViewBag.Ten)
                    {
                        <tr>
                            <td>@l.Location</td>
                            <td>@l.TeamName</td>
                        </tr>
                    }
                </table>
            <li><h3>...all teams, ordered by team name in reverse alphabetical order</h3></li>
                <table class="table table-striped">
                    <tr>
                        <th>Team Location</th>
                        <th>Team Name</th>
                    </tr>
                    @foreach(var r in ViewBag.Eleven)
                    {
                        <tr>
                            <td>@r.Location</td>
                            <td>@r.TeamName</td>
                        </tr>
                    }
                </table>
            <li><h3>...every player with last name "Cooper"</h3></li>
                <table class="table table-striped">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                    @foreach(var c in ViewBag.Twelve)
                    {
                        <tr>
                            <td>@c.FirstName</td>
                            <td>@c.LastName</td>
                        </tr>
                    }
                </table>
            <li><h3>...every player with first name "Joshua"</h3></li>
                <table class="table table-striped">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                    @foreach(var j in ViewBag.Thirteen)
                    {
                        <tr>
                            <td>@j.FirstName</td>
                            <td>@j.LastName</td>
                        </tr>
                    }
                </table>
            <li>...every player with last name "Cooper" EXCEPT those with "Joshua" as the first name</li>
            <li>...all players with first name "Alexander" OR first name "Wyatt"</li>
        </ol>
    </div>
</div>