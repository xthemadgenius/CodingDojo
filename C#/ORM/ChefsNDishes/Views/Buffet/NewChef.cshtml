@using ChefsNDishes.Models
@model Chef

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/forms.css">
    <title>New Chef</title>
</head>
<body>
    <div class="login-box">
        <div>
            <a href="/">Home</a>
            <h2>Add a Chef</h2>
        </div>
        <form asp-controller="Buffet" method="POST">
            <div class="user-box">
                <input asp-for="FirstName" type="text" name="FirstName" id="FirstName">
                <label asp-for="FirstName"></label>
            </div>
            <div class="user-box">
                <input type="text" asp-for="LastName" name="LastName" id="LastName">
                <label asp-for="LastName"></label>
            </div>
            <div class="user-box">
                <input type="date" asp-for="DOB" name="DOB" id="DOB">
                <label asp-for="DOB"></label>
            </div>
            <button type="submit">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Submit
            </button>
        </form>
    </div>
</body>
</html>