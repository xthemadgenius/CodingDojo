@model DojoSurveyWithValidation.Models.Users
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Home</h1>
    <div>
        <form asp-action="Result" asp-controller="Survey" method="POST">
            <div>
                <p><span asp-validation-for="Name"></span></p>
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" name="Name" id="Name">
            </div>

            <div>
                <p><span asp-validation-for="Location"></span></p>
                <label asp-for="Location"></label>
                <select asp-for="Location" name="Location" id="Location">
                    <option value="San-Francisco">San Francisco</option>
                    <option value="Seattle">Seattle</option>
                    <option value="Austin">Austin</option>
                    <option value="Newport-Beach">Newport Beach</option>
                    <option value="New-York">New York</option>
                </select>
            </div>

            <div>
                <p><span asp-validation-for="Language"></span></p>
                <label asp-for="Language"></label>
                <select asp-for="Language" name="Language" id="language">
                    <option value="HTML">HTML</option>
                    <option value="CSS">CSS</option>
                    <option value="Javacript">Javacript</option>
                    <option value="Python">Python</option>
                    <option value="React">React</option>
                    <option value="C#">C#</option>
                </select>
            </div>

            <div>
                <p><span asp-validation-for="Comment"></span></p>
                <label asp-for="Comment"></label>
                <textarea asp-for="Comment" name="Comment" id="Comment" cols="30" rows="10"></textarea>
            </div>
            
            <input type="submit" value="Submit User">
        </form>
    </div>
</body>
</html>