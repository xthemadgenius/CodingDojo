@model DojoSurveyWithModel.Models.User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New User</title>
</head>
<body>
    <div>
        <form asp-action="ResultSubmission" asp-controller="Survey" method="POST">
            <div>
                <label for="Name">Name:</label>
                <input type="text" name="Name" id="Name">
            </div>
            <div>
                <label for="Location">Dojo:</label>
                <select name="Location" id="Location">
                    <option value="San-Francisco">San Francisco</option>
                    <option value="Seattle">CSS</option>
                    <option value="Austin">Javacript</option>
                    <option value="Newport-Beach">Newport Beach</option>
                    <option value="New-York">New York</option>
                </select>
            </div>
            <div>
                <label for="Language">Language:</label>
                <select name="Language" id="language">
                    <option value="HTML">HTML</option>
                    <option value="CSS">CSS</option>
                    <option value="Javacript">Javacript</option>
                    <option value="Python">Python</option>
                    <option value="React">React</option>
                    <option value="C#">C#</option>
                </select>
            </div>
            <div>
                <label for="Comment">Comment:</label>
                <textarea name="Comment" id="Comment" cols="30" rows="10"></textarea>
            </div>
            <input type="submit">
        </form>
    </div>
</body>
</html>