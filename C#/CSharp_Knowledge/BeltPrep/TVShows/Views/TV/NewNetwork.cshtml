@using TVShows.Models
@model Network
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-10">
                <h1>Add a Network</h1>
            </div>
            <div class="col-sm-2">
                <a href="/shows">Go Back</a>
            </div>
        </div>
        <div class="row">
            <form asp-action="CreateNetwork" asp-controller="TV" method="post">
                <div class="form-group row">
                    <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Name"></span>
                    <label asp-for="Name" class="col-sm-4"></label>
                    <input asp-for="Name" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                    <input type="submit" value="Create" class="col-sm-4 offset-sm-4 btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</body>
</html>