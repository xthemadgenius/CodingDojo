@using TVShows.Models
@model Show
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-10">
                <h1>Edit @Model.Title</h1>
            </div>
            <div class="col-sm-2">
                <a asp-action="Shows" asp-controller="TV">Go Back</a>
            </div>
        </div>
        <div class="row">
            <form asp-action="UpdateShow" asp-controller="TV" asp-route-id="@Model.ShowId" method="post">
                <partial name="ShowPartial" model="@Model"/>
                <div class="form-group row">
                    <input type="submit" value="Update" class="col-sm-4 offset-sm-4 btn btn-primary">
                </div>
            </form>
        </div>
        <div class="row text-center">
            <a asp-action="OneShow" asp-controller="TV" asp-route-id="@Model.ShowId">Go To Show</a>
        </div>
    </div>
</body>
</html>