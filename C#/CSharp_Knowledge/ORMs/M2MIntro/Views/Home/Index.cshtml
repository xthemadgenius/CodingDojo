@using M2MIntro.Models
@model List<Alien>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Home Planet</th>
                    <th>Number of Planets Visited</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Alien alien in Model)
                {
                    <tr>
                        <td>@alien.AlienId</td>
                        <td><a href="/aliens/@alien.AlienId/addvisit">@alien.Name</a></td>
                        <td>@alien.HomePlanet.Name</td>
                        <td>@alien.PlanetsVisited.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>    
</body>
</html>